{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "declarationDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "lib": [
      "scripthost",
      "dom",
      "es6",
      "es7",
      "esnext"
    ]
  },
  "include": [
    "src/*",
    "example"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "jsx"
  ]
}
