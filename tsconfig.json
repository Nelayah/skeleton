{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "es7",
      "dom",
      "scripthost"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "bin/skeleton.ts",
    "template/index.ts",
    "scripts/ReactComponent/index.ts",
    "scripts/utils/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/src/**/*"
  ]
}
